{
  "name": "PHub's Age Verification Remover",
  "description": "Removes age verification",
  "version": "1.4.5",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pornhub.com/*", "*://*.pornhub.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "<all_urls>"
  ]
}
